<html>
<head>
    <title>Log In</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
    <script>
        var app = angular.module('wardroberapp', []);
        app.controller('loginCtrl', function($scope, $http) {
            $scope.email = "default@email.com";
            $scope.password = "default";

            // will be called when we click on signin button in the UI using the ng-click angular directive
            $scope.doLogin = function() {
                $http({
                    method : 'POST',
                    url : '/login',
                    data : {
                        "email" : $scope.email,
                        "password" : $scope.password
                    },
                    headers : {
                        'Content-Type' : 'application/json'
                    }
                }).success(function(data) {
                    if (data.status === 200) {
                        alert("login successful, data from server: ");
                        alert(data.status + data.message);
                        window.location = "/home";
                    } else {
                        alert("login failure , data from server: ");
                        alert(data.status + data.message);
                    }
                });
            };
        });
    </script>
</head>
<body bgcolor="grey" ng-app="wardroberapp" ng-controller="loginCtrl">
    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-offset-10">
                    <a class="navbar-brand" href="/signup">Sign up</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="col-lg-3">
        <p>&nbsp;</p>
    </div>
    <div class="col-lg-6">
        <div class="well well-lg">
            <h2 class="text-center">  Log in to your account </h2>
            <br>
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-8">
                        <input ng-model="email" type="email" class="form-control" id="inputEmail3" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-8">
                        <input ng-model="password" type="password" class="form-control" id="inputPassword3" placeholder="Password">
                    </div>
                </div>
                <div class="checkbox">
                    <label class="col-sm-offset-2">
                        <input type="checkbox" id="checkboxSuccess" value="option1"> Remember me</label>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-10">
                        <br>
                        <button ng-click="doLogin()" class="btn btn-success">Signin</button>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-2">
            <p>&nbsp;</p>
        </div>
    </div>
    <div class="footer" bgcolor="grey"></div>
</body>
</html>