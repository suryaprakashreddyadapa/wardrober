<html>
<head>
   <title>Sign Up</title>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
   <script>
       var app = angular.module('wardroberapp', []);
       app.controller('signupCtrl', function($scope, $http) {

           //  $scope.email = "default@email.com";
           // $scope.password = "default";

           // will be called when we click on signin button in the UI using the ng-click angular directive
           $scope.doSignup = function() {
               $http({
                   method : 'POST',
                   url : '/signup',
                   data : {
                       "firstName" : $scope.firstName,
                       "lastName" : $scope.lastName,
                       "email" : $scope.email,
                       "password" : $scope.password,
                       "mobileNo" : $scope.mobileNo
                   },
                   headers : {
                       'Content-Type' : 'application/json'
                   }
               }).success(function(data) {
                   if (data.status === 200) {
                       alert("Sign up successful");
                       //alert(data.status + data.message);
                       window.location = "/login";
                   } else {
                       alert("Sign up failure");
                       //alert(data.status + data.message);
                   }
               });
           };
       });
   </script>
</head>
<body bgcolor="#f0f0f5" ng-app="wardroberapp" ng-controller="signupCtrl">
<nav class="navbar navbar-inverse navbar-static-top">
   <div class="container">
      <div class="row">
         <div class="col-lg-offset-10">
            <a class="navbar-brand" href="/signup">Sign up</a>
            <a class="navbar-brand" href="/login">Log in </a>
         </div>
      </div>
</nav>
<div class="container">
   <div class="row"><br></div>
   <div class="row">
      <div class="col-lg-3">
         <p>&nbsp</p>
      </div>
      <div class="col-lg-6">
         <div class="well well-lg">
            <h2 class="text-center">  Sign up for your account </h2>
            <br>
            <form class="form-horizontal">
               <div class="form-group">
                  <label for="firstName" class="col-sm-2 control-label">First Name</label>
                  <div class="col-sm-8">
                     <input ng-model="firstName" class="form-control" id="firstName" placeholder="First name">
                  </div>
               </div>
               <div class="form-group">
                  <label for="lastName" class="col-sm-2 control-label">Last Name</label>
                  <div class="col-sm-8">
                     <input ng-model="lastName" class="form-control" id="lastName" placeholder="Last name">
                  </div>
               </div>
               <div class="form-group">
                  <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                  <div class="col-sm-8">
                     <input ng-model="email" class="form-control" id="inputEmail3" placeholder="Email">
                  </div>
               </div>
               <div class="form-group">
                  <label for="inputPassword3" class="col-sm-2 control-label">Create Password</label>
                  <div class="col-sm-8">
                     <input ng-model="password" class="form-control" id="inputPassword3" placeholder="Password">
                  </div>
               </div>
               <div class="form-group">
                  <label for="inputPassword4" class="col-sm-2 control-label">Conform Password</label>
                  <div class="col-sm-8">
                     <input type="password" class="form-control" id="inputPassword4" placeholder="Conform Password">
                  </div>
               </div>
               <div class="form-group">
                  <label for="mobileNo" class="col-sm-2 control-label">Mobile</label>
                  <div class="col-sm-8">
                     <input ng-model="mobileNo" class="form-control" id="mobileNo" placeholder="Mobile Number">
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-sm-offset-4 col-sm-10">
                     <button ng-click="doSignup()" class="btn btn-primary">Sign up</button>
                     &nbsp;&nbsp;&nbsp;&nbsp;
                     <button type="reset" class="btn btn-danger">Reset</button>
                  </div>
               </div>
            </form>
         </div>
         <div class="col-lg-2">
            <p>&nbsp</p>
         </div>
      </div>
   </div>
</div>
</body>
</html>